<div id="box1">
	<div id="wrapper">
		<div id="content" align="left"><a name="content"></a>
            <h3>{{title}}</h3>
            {{{description}}}
            <form name="form1" action="">
                <fieldset>
                    <legend>
                        <span class="instruction">{{{instructions}}}</span>
                    </legend>
                    <table width="95%" border="0" cellspacing="0" cellpadding="3">
                        {{#each choices}}
                        <tr>
							<td valign="top" width="20"><input type="text" name="Quiz" id="Quiz{{@index}}" size="1" maxlength="1" /></td>
                            <td valign="top" width="100%"><label for="Quiz{{@index}}">{{title}}</label></td>
                        </tr>
                        {{/each}}
                        <tr>
                            <td>&nbsp;</td>
                            <td valign="top"><a href="javascript:Clicked()" onmouseover="document.submitme.src='images/buttonSubmitHi.gif';" onmouseout="document.submitme.src='images/buttonSubmit.gif';" onmousedown="document.submitme.src='images/buttonSubmitDn.gif';"><img src="images/buttonSubmit.gif" alt="Submit your answer" name="submitme" border="0" id="submitme" /></a></td>
                        </tr>
                    </table>
                </fieldset>
                <div id="feedbackDiv"></div>
            </form>
			<script language="JavaScript" src="scripts/FeedbackMA.js" type="text/javascript"></script>
			<script language="JavaScript" type="text/javascript">
                var Feedback = "{{feedback}}"  // you will need to "escape" all double quotes in this area with back slashes.  (i.e. ...he said. \"this is great\")
                var vCorrectAnswer = "{{answerCode}}" // enter the sequence the distractors should be in (i.e. "312" specifies that the second item comes first, then the third item...)
                var vTriesAllowed = {{triesAllowed}}
				showCorrect()
			</script>

		</div><!-- end #content -->
	</div><!-- end #wrapper -->
</div><!-- end #box1 -->
