<h4>Image Options</h4>

<div class="form-group">
    <label for="imagePosition" class="col-sm-3 control-label">Image position</label>
    <div class="col-sm-8">
        <div class="radio">
            <label>
                <input type="radio" name="imagePosition" value="left" checked>
                Left
          </label>
        </div>
        <div class="radio">
            <label>
                <input type="radio" name="imagePosition" value="right">
                Right
            </label>
        </div>
    </div>
</div>

<div class="form-group">
    <label for="description" class="col-sm-3 control-label">Description</label>
    <div class="col-sm-8">
      <textarea class="form-control" rows="4" id="description" placeholder="(html supported)"></textarea>
    </div>
</div>

<div class="form-group">
    <label for="imagePath" class="col-sm-3 control-label">Image path</label>
    <div class="col-sm-8">
      <input type="text" class="form-control" id="imagePath" placeholder="assets/my_image.jpg">
    </div>
</div>

<div class="form-group">
    <label for="altText" class="col-sm-3 control-label">Alt text</label>
    <div class="col-sm-8">
      <textarea class="form-control" rows="4" id="altText" placeholder=""></textarea>
    </div>
</div>
