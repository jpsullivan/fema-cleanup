<h4>Video Options</h4>

<div class="form-group">
    <label for="description" class="col-sm-3 control-label">Description</label>
    <div class="col-sm-8">
      <textarea class="form-control" rows="4" id="description" placeholder="(html supported)"></textarea>
    </div>
</div>

<div class="form-group">
    <label for="posterImagePath" class="col-sm-3 control-label">Poster image</label>
    <div class="col-sm-8">
      <input type="text" class="form-control" id="posterImagePath" placeholder="assets/my_poster_image.jpg">
    </div>
</div>

<div class="form-group">
    <label for="videoPath" class="col-sm-3 control-label">Video file</label>
    <div class="col-sm-8">
      <input type="text" class="form-control" id="videoPath" placeholder="assets/my_video_file.mp4">
    </div>
</div>
